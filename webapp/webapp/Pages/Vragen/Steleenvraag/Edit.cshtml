@page
@model webapp.Pages.Vragen.Steleenvraag.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.ID" />
            <div class="form-group">
                <label asp-for="Question.Naam" class="control-label"></label>
                <input asp-for="Question.Naam" class="form-control" />
                <span asp-validation-for="Question.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Vraag" class="control-label"></label>
                <input asp-for="Question.Vraag" class="form-control" />
                <span asp-validation-for="Question.Vraag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.VakID" class="control-label"></label>
                <input asp-for="Question.VakID" class="form-control" />
                <span asp-validation-for="Question.VakID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.VraagText" class="control-label"></label>
                <input asp-for="Question.VraagText" class="form-control" />
                <span asp-validation-for="Question.VraagText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.AndwoordText" class="control-label"></label>
                <input asp-for="Question.AndwoordText" class="form-control" />
                <span asp-validation-for="Question.AndwoordText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question.IsFAQ" /> @Html.DisplayNameFor(model => model.Question.IsFAQ)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Question.Date" class="control-label"></label>
                <input asp-for="Question.Date" class="form-control" />
                <span asp-validation-for="Question.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
