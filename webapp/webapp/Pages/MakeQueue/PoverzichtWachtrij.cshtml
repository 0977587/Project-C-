@page
@model webapp.Pages.MakeQueue.PWachtrij
@using DatabaseController
@using webapp.Models
@{
    ViewData["Title"] = "Vraag stellen";
}
<!DOCTYPE html>
<html lang="en">
<style>
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    #invul {
        width: 100%;
        font-size: 12pt;
    }

    .myButton {
        background-color: #44c767;
        border-radius: 28px;
        border: 1px solid #18ab29;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 17px;
        padding: 16px 31px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #2f6627;
    }

        .myButton:hover {
            background-color: #5cbf2a;
        }

        .myButton:active {
            position: relative;
            top: 1px;
        }

    .myButton2 {
        background-color: #44c767;
        border-radius: 7px;
        border: 1px solid #18ab29;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 14px;
        padding: 8px 16px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #2f6627;
    }

        .myButton2:hover {
            background-color: #5cbf2a;
        }

        .myButton2:active {
            position: relative;
            top: 1px;
        }
</style>
<h1>
    @Model.Title
</h1>
<form method="post">
    <input hidden="hidden" asp-for="sluiten" value="1" />
    <button id="Killbtn" ref="#" onclick='deleteWachtrij()' class="myButton">Wachtrij sluiten</button>
</form>

<div class="col-xs-6">
    <h2 class="sub-header">Te behandelen vragen</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1">Vraag</th>
                    <th class="col-md-2">Naam</th>
                    <th class="col-md-3">Lokaal</th>
                    <th class="col-md-3">vak</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 0;
                }
                @foreach (var item in Model.Vragen)
                {
                    string vaknaam2 = new DatabaseController.DBConnection().Send("SELECT Naam FROM projectcdb.vak where VakID = " + item.VakID + ";")[0][0];
                    count++;
                    if (count > 5)
                    {
                        break;
                    }
                    User user = new User();
                    user.SelectOne(item.UserID);
                    <tr>
                        <td class="col-md-1">@item.VraagText</td>
                        <td class="col-md-2">@user.Voornaam</td>
                        <td class="col-md-3">@item.Locatie</td>
                        <td class="col-md-3">@vaknaam2</td>
                        <td>
                            <form method="post">
                                <input hidden="hidden" asp-for="Choice" value="@item.VraagID" />
                                <button ref="#" class="myButton">Behandel</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <br /><br />
    <br /><br />
</div>
