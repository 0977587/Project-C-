@page
@model IndexModel
@using DatabaseController
@using webapp.Models
@{
    ViewData["Title"] = "Studenten Menu";


    List<Vraag> vragen = new List<Vraag>();
    int UserID = Sessie.GetInstance.getLoginUserID();
    List<List<string>> connect = new DBConnection().Send("SELECT * FROM projectcdb.vraag where UserID = " + UserID.ToString() + ";");
    foreach (List<string> temp in connect)
    {
        int Vraagid = Convert.ToInt32(temp[0]);
        Vraag v = new Vraag();
        v.SelectOne(Vraagid);
        List<List<string>> connect2 = new DBConnection().Send("SELECT * FROM projectcdb.vraag where WachtrijID = " + temp[9] + " order by DateAdded;");
        int positie = 1;
        int count = 1;
        foreach (List<string> temp2 in connect2)
        {
            if (temp2[0].Equals(temp[0]))
            {
                positie = count;
            }
            else
            {
                count++;
            }
        }
        v.positie = positie;
        vragen.Add(v);

    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        h1 {
            color: navy;
        }

        h2 {
            color: navy;
            position: absolute;
            top: 60%
        }

        #steleenvraagbtn {
            position: absolute;
            left: 15%;
            top: 30%;
        }

        #logoutbtn {
            position: absolute;
            top: 15%;
            right: 10%;
        }

        #vakkenbtn {
            position: absolute;
            left: 35%;
            top: 30%;
        }

        #mijnaccountbtn {
            position: absolute;
            left: 15%;
            top: 40%;
        }

        #table{
            position: absolute;
            top: 75%;
        }
        
    </style>


</head>

<body>

    <h1 class="display-4">Student  Menu</h1>


    <form id="vakkenbtn" action="../Vakken/SVakken" method="get">
        <button>vakken</button>
    </form>
    <form id="steleenvraagbtn" action="../Vragen/Steleenvraag/Create" method="get">

        <button>Vragen</button>
    </form>

    <input id="mijnaccountbtn" type="button" value="button" />

    <button id="logoutbtn"> Log uit</button>

    <h2 class="text-body">Announcements</h2>

    <div class="col-xs-6" id="table">
        <h3 class="sub-header">Wachtrijen</h3>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">Vraag</th>
                        <th class="col-md-2">Wachtrij</th>
                        <th class="col-md-3">Positie</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var cnt = 0;
                    }

                    @foreach (var item in vragen)
                    {
                        cnt++;
                        if (cnt > 5)
                        {
                            break;
                        }

                        <tr>
                            <td class="col-md-1">@item.VraagText</td>
                            <td class="col-md-2">@item.WachtrijID</td>
                            <td class="col-md-3">@item.positie</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

</body>
</html>