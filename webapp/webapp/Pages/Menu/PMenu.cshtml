@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <style>
        
        .myButton {		
	        box-shadow:inset 0px 1px 0px 0px #97c4fe;		
	        background:linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%);		
	        background-color:#3d94f6;		
	        border-radius:13px;		
	        display:inline-block;		
	        cursor:pointer;		
	        color:#ffffff;		
	        font-family:Arial;		
	        font-size:15px;		
	        font-weight:bold;		
	        padding:20px 40px;		
	        text-decoration:none;		
	        text-shadow:0px 1px 0px #1570cd;		
        }		
        .myButton:hover {		
	        background:linear-gradient(to bottom, #1e62d0 5%, #3d94f6 100%);		
	        background-color:#1e62d0;		
        }		
        .myButton2 {		
	        box-shadow:inset 0px 1px 0px 0px #97c4fe;		
	        background:linear-gradient(to bottom, #3d94f6 5%, #1e62d0 100%);		
	        background-color:#3d94f6;		
	        border-radius:13px;		
	        display:inline-block;		
	        cursor:pointer;		
	        color:#ffffff;		
	        font-family:Arial;		
	        font-size:15px;		
	        font-weight:bold;		
	        padding:5px 10px;		
	        text-decoration:none;		
	        text-shadow:0px 1px 0px #1570cd;		
        }		
        .myButton2:hover {		
	        background:linear-gradient(to bottom, #1e62d0 5%, #3d94f6 100%);		
	        background-color:#1e62d0;		
        }
        h1 {
            color: navy;
        }

        h2 {
            color: navy;
            position: absolute;
            top: 60%
        }

        #i {
            margin: 0 auto;
        }

        #mijnaccountbtn {
            position: absolute;
            left: 15%;
            top: 20%;
        }

        #logoutbtn {
            position: absolute;
            top: 15%;
            right: 10%;
        }

        #wachtrijbtn {
            position: absolute;
            left: 35%;
            top: 20%;
        }

        #vragenbekijkenbtn {
            position: absolute;
            left: 15%;
            top: 40%;
        }

        #faqbtn {
            position: absolute;
            top: 30%;
            left: 35%
        }

        #wachtrijbekijkenbtn {
            position: absolute;
            top: 30%;
            left: 15%;
        }
    </style>
</head>

<br />

<body>

    <h1 class="display-4">Peercoach app Peercoach</h1>

    <form id="mijnaccountbtn" action="" method="get">
        <button class="myButton">Mijn account</button>
    </form>

    <br />

    <form id="wachtrijbtn" action="../MakeQueue/create" method="get">
        <button class="myButton">Wachtrij maken</button>
    </form>

    <br />

    <form id="vragenbekijkenbtn" action="../Vragen/PVragen" method="get">
        <button class="myButton">Vragen bekijken</button>
    </form>

    <br />

    <form id="faqbtn" action="../FAQ/overzichtFAQ" method="get">
        <button class="myButton">FAQ</button>
    </form>

    <br />

    <form id="wachtrijbekijkenbtn" action="../MakeQueue/PoverzichtWachtrij" method="get">
        <button class="myButton">Wachtrij bekijken</button>
    </form>

    <br />

    <h2 class="text-body">Announcements</h2>


    <button id="logoutbtn"> Log uit</button>

</body>