
@{
    ViewBag.Title = "Vergeet Wachtwoord";
}

<h2>Wachtwoord vergeten?</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Emailadres</label>
            @Html.TextBox("Emailadres", "", new { @class="form--control"})
        </div> 
        <div class="form-group">
             <div class="col-md-offset-2 col-md-10"></div>
            <input type="submit" value="Voer in" class="btn btn-success" />
             </div>
   </div>
}

